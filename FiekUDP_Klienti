from socket import *
import time

server = "127.0.0.1"
port = 9000

clientSocket = socket(family=AF_INET, type=SOCK_DGRAM)
clientSocket.settimeout(5)


while True:
    try:
        kerkesa=input("Kerkesa :")
        clientSocket.sendto(kerkesa.encode("ASCII"),(server,port))
        pergjigja, addressa = clientSocket.recvfrom(2048)
        print("Serveri: "+pergjigja.decode("UTF-8"))
    except TimeoutError:
        print("Kerkesa deshtoi te dergohej brenda 2 sekondave")
connectionSocket.close() 

